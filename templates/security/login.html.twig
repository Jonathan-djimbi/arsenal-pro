{% extends 'base.html.twig' %}

{% block title %}<title>Se connecter à Arsenal Pro</title>{% endblock  %}
{% block annonce %} {% endblock %}
{% block content %}
    <div class="block-small">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border_radius_all box_shadow_all text-center" autocomplete="email " placeholder="Votre adresse email *" required autofocus>
            <br/>
            <div class="form-group">
                <div class="input-group">
                <input type="password" name="password" id="inputPassword" class="form-control border_radius_all box_shadow_all text-center" autocomplete="current-password" placeholder="Votre mot de passe *" required>
                <div class="input-group-addon sectionAfficherLoginPass" id="showHidePassword">
                    <p id="inputPassLoginShow"><i class="fa fa-eye"></i></p>
                </div>
                </div>
            </div>
            <br/><span class="text-info">* informations obligatoires</span>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
    
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <button class="btn btn-lg btn-info btn-block mt-3 w-50 mx-auto border_radius_all" type="submit">Se connecter</button>
            <hr>
            <p class="text-center"><a href="{{ path('app_reset_password') }}">Mot de passe oublié</a> ?</p>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_register') }}">créer un compte</a></p>
        </form>
    </div>
{% endblock %}
{% block js %}
<script src="{{ asset('assets/js/5896da4c64a84b7f4684a8979c868ee.js') }}?v={{version}}"></script>
{% endblock %}