{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% if ea.crud.currentAction == 'detail' %}
        {% if field.value|length > 0 %}
            {% for value in field.value|slice(0,1) %}
                {% if value.raisonSocial != null or value.raisonSocial != ""%}
                    <div>
                        <p>{{ value.desc }}</p>
                    </div>
                {% else %}
                    <p>Aucun</p>
                {% endif %}
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProfessionnelAssociationCompteCrudController').setAction('edit').setEntityId(value.id)}}">Modifier les d√©tails du professionnel/assocation</a>
            {% endfor %}
        {% else %}
            <p>Aucun</p>
        {% endif %}
{% else %}
    <span class="badge badge-secondary">{{ field.formattedValue }}</span>
{% endif %}