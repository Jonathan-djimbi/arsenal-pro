{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% if ea.crud.currentAction == 'index' or ea.crud.currentAction == 'detail' %}
        {% for value in field.value|slice(0,1) %}
        <div>
        {% if value.points != NULL %}
            <p>{{ value.points }} | <a href="/admin?crudAction=edit&crudControllerFqcn=App%5CController%5CAdmin%5CCarteFideliteCrudController&entityId={{value.id}}">Modifier</a></p>
        {% else %}
            <p>0 | <a href="/admin?crudAction=edit&crudControllerFqcn=App%5CController%5CAdmin%5CCarteFideliteCrudController&entityId={{value.id}}">Modifier</p>
        {% endif %}
        </div>
        {% endfor %}
{% else %}
    <span class="badge badge-secondary">{{ field.formattedValue }}</span>
{% endif %}