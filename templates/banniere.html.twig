{% if multi == false %}
<div class="fakeDiv"></div>
<section class="banniere_show">
    <h1 class="text-center" style="color: {{pubs.couleur}};">{{pubs.titre}}</h1>
    <img src="{{pubs.image}}" alt="banniere banner arsenal pro"/>
</section><br/>
{% else %}
<section>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for key, pub in pubs %}
                <li data-target="#myCarousel" data-slide-to="{{key}}" class="{% if key == 0 %}active{% endif %}"></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner">
            {% for key, pub in pubs %}
                <div class="carousel-item {% if key == 0 %}active{% endif %}" style="background: url('{{pub.image}}'); background-size:contain; background-repeat: no-repeat; background-position: center;">
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h2><a href="{{pub.url}}" style="color: {{pub.couleur}};">{{pub.titre}}</a></h2>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
{% endif %}
