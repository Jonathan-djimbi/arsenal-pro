    <a href="{% if produit.id == produits.id %}#{% else %}{{ path('app_produit',{'slug': produits.slug}) }}{% endif %}">
        <img loading="lazy" src="{{ (produit.illustration starts with "http") ? '' : '/uploads/' }}{{ produits.illustration }}" alt="{{ produits.name }}" class="img-fluid">
    </a>
    {# <h5>{{ produits.name }}</h5> #}
